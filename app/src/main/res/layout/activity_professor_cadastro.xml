<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPadrao"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="Cadastrar"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nome_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nomeCadastroProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="@string/nome_hint_intro"
                android:inputType="textCapWords"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sobrenome_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sobrenomeCadastroProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="@string/sobrenome_hint_intro"
                android:inputType="textCapWords"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/universidade_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/universidadeCadastroProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="@string/universidade_hint_intro"
                android:inputType="textCapCharacters"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailCadastroProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email_hint_intro"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/senha_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/senhaCadastroProfessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/senha_hint_intro"
                android:inputType="textPassword"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/codigo_monitor_intro"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCodigoMonitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Permite cadastrar monitores"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/lista_commodities_intro"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxAlgodao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/algodao" />

                    <CheckBox
                        android:id="@+id/checkBoxArroz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/arroz" />

                    <CheckBox
                        android:id="@+id/checkBoxBoi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boiGordo" />

                    <CheckBox
                        android:id="@+id/checkBoxFeijao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feijao" />

                    <CheckBox
                        android:id="@+id/checkBoxMilho"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/milho" />

                    <CheckBox
                        android:id="@+id/checkBoxSorgo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sorgo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxAmendoim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/amendoim" />

                    <CheckBox
                        android:id="@+id/checkBoxBezerro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bezerro" />

                    <CheckBox
                        android:id="@+id/checkBoxCafe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cafe" />

                    <CheckBox
                        android:id="@+id/checkBoxFrango"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/frango" />

                    <CheckBox
                        android:id="@+id/checkBoxSoja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/soja" />

                    <CheckBox
                        android:id="@+id/checkBoxTrigo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/trigo" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button79"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_shape_primary"
                android:onClick="cadastrarProfessor"
                android:text="@string/signin_intro"
                android:textColor="@color/backgroundPadrao"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>